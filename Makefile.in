CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

UTILS   = hcidump hcitool
PARSER  = parser/libparser.a

SBINDIR = /usr/sbin
BINDIR  = /bin
ETCDIR  = /etc

CC	= @CC@
INSTALL = @INSTALL@

DEFS = @DEFS@

CFLAGS  = @CFLAGS@ $(DEFS) -Wall -I ./parser
LDFLAGS = -L ./parser -lbluetooth -lparser

%:%.c
	$(CC) $(CFLAGS) -o $@ $< $(LDFLAGS)

all: $(UTILS)

$(PARSER): force
	@make -C parser all

$(UTILS): $(PARSER)

install: all
	$(INSTALL) -m 755 -o root -g root $(UTILS) $(SBINDIR)

clean:
	@make -C parser clean
	rm -f *.o *.tab.* *.lex.* $(UTILS)

distclean: clean
	@make -C parser distclean
	rm -f $(CONFIGURE_FILES)

force:;
